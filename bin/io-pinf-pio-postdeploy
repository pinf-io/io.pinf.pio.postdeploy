#!/bin/bash
# Source https://github.com/cadorn/bash.origin
. "$BO_ROOT_SCRIPT_PATH"
function init {
	eval BO_SELF_BASH_SOURCE="$BO_READ_SELF_BASH_SOURCE"
	BO_deriveSelfDir ___TMP___ "$BO_SELF_BASH_SOURCE"
	PGS_DIR="$___TMP___"


	function postdeploy {
		BO_format "$VERBOSE" "HEADER" "io.pinf.pio.postdeploy for: $PIO_SERVICE_HOME"
		pushd "$PIO_SERVICE_HOME" > /dev/null

#		cat sync/package.program.json

			if ! BO_has node; then
				echo "ERROR: 'node' not on PATH!"
				exit 1
			fi

			node "$PGS_DIR/../postdeploy.js" $@

		popd > /dev/null
		BO_format "$VERBOSE" "FOOTER"
	}

	postdeploy

}
init $@