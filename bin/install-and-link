#!/bin/bash
# Source https://github.com/cadorn/bash.origin
. "$BO_ROOT_SCRIPT_PATH"
function init {
	eval BO_SELF_BASH_SOURCE="$BO_READ_SELF_BASH_SOURCE"
	BO_deriveSelfDir ___TMP___ "$BO_SELF_BASH_SOURCE"
	PGS_DIR="$___TMP___"


	function install {
		BO_log "$VERBOSE" "Installing"

	}

	function linkCommand {
		rm -f "$1" > /dev/null || true
		BO_log "$VERBOSE" "Linking '$PGS_DIR/io-pinf-pio-postdeploy' to '$1'"
		ln -s "$PGS_DIR/io-pinf-pio-postdeploy" "$1"
	}


	BO_format "$VERBOSE" "HEADER" "Install and link postdeploy.pio.pinf.io"

	install
	linkCommand "$1"

	BO_format "$VERBOSE" "FOOTER"
}
init $@